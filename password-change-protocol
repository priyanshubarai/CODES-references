print("\n")
print("WLCM to password change protocol\n")

#input
a=str(input("enter your new password : "))
while len(a)<5:  #condition
    print("\npassword length is too weak\n"
          "plz try again\n")
    a = str(input("type your new password : "))
while 5<len(a)<7:   #condition
    print("password length is good\n"
          "but still not secure\n")
    a = str(input("type your new password : "))
else:     #condition
    print("password length is secure\n")
b=str(input("reenter your new password : "))
while a!=b: #condition
    print("password doesn`t match")
    b = input("reenter your new password : ")
c=str(input("type a password hint : "))
